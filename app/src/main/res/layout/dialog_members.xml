<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/bg_dialog">

    <EditText
        android:id="@+id/edt_mathanhvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Mã thành viên:"
        android:textSize="20dp"
        android:background="@drawable/background_edt"/>

    <EditText
        android:id="@+id/edt_tenthanhvien"
        android:hint="Họ và tên:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:background="@drawable/background_edt"/>
    <EditText
        android:id="@+id/edt_namsinh"
        android:hint="Năm sinh: dd/mm/yyyy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:background="@drawable/background_edt"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel_thanhvien"
            android:text="Hủy"
            android:layout_marginRight="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_cancel_24"
            android:backgroundTint="#B9F6CA"/>
        <Button
            android:id="@+id/btn_add_thanhvien"
            android:text="Thêm"
            android:drawableRight="@drawable/ic_baseline_add_circle_24"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#B9F6CA"/>
    </LinearLayout>
</LinearLayout>