<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="@drawable/bg_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/img_delete_S">
            <ImageView
                android:src="@drawable/book"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Mã sách:"
                    android:textSize="20dp"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_maSach"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tên sách:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_width="140dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_tenSach"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Giá thuê:"
                    android:textSize="22dp"
                    android:layout_width="140dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_giaThue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:textSize="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tác giả:"
                    android:textSize="22dp"
                    android:layout_width="140dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_loaiSach"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:textSize="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Loai sách:"
                    android:textSize="22dp"
                    android:layout_width="140dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_tacGia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_delete_S"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_delete_outline_24" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>