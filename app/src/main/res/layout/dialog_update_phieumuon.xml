<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/bg_dialog">
    <EditText
        android:id="@+id/edt_maPhieuMuon_up"
        android:hint="Mã phiếu mượn:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:background="@drawable/background_edt"/>
    <Spinner
        android:id="@+id/spinner_phieuMuon_TV_up"
        style="@style/SpinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>
    <Spinner
        android:id="@+id/spinner_phieuMuon_TS_up"
        style="@style/SpinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>
    <CheckBox
        android:id="@+id/chk_traSach_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Đã trả sách ?"
        android:textSize="20dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel_PM_up"
            android:text="Hủy"
            android:layout_marginRight="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_cancel_24"
            android:backgroundTint="#B9F6CA"/>
        <Button
            android:id="@+id/btn_update_PM_up"
            android:text="Sửa"
            android:drawableRight="@drawable/ic_baseline_add_circle_24"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#B9F6CA"/>
    </LinearLayout>

</LinearLayout>